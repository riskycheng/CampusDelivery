<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    android:background="@drawable/background_login">
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dip" >
    </LinearLayout>
    <zhang.fan.vgoo2.idata.CornerListView
        android:id="@+id/list1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bg_listview"
        android:cacheColorHint="@null" />
    
    <RelativeLayout  
        android:id="@+id/login_div" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:paddingTop="15dip" 
        android:paddingLeft="15dip" 
        android:paddingRight="15dip"
        android:paddingBottom="15dip"
        android:layout_margin="15dip"  
        android:background="@drawable/background_login_div_bg" >
		<TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content" >
		    <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="运单号：" android:textSize="18sp" />
				<EditText android:id="@+id/mail_no" android:layout_width="200sp" android:layout_height="wrap_content"
				    android:singleLine="true" android:editable="false" />
		    </TableRow>
		    <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="物流公司：" android:textSize="18sp" />
<!-- 				<EditText android:id="@+id/company_id" android:layout_width="200sp" android:layout_height="wrap_content"
				    android:singleLine="true" android:editable="false" /> -->
				
				<Spinner android:id="@+id/company_spinner" android:layout_width="200sp" android:layout_height="wrap_content" />
				
		    </TableRow>
		    <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="收件人：" android:textSize="18sp" />
				<EditText android:id="@+id/receiver_name" android:layout_width="200sp" android:layout_height="wrap_content"
				    android:singleLine="true" android:editable="true" />
		    </TableRow>
		    <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
		    	<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="手机号：" android:textSize="18sp" />
				<EditText android:id="@+id/receiver_mobilephone" android:layout_width="200sp" android:layout_height="wrap_content" 
				    android:singleLine="true" android:editable="true" android:inputType="number" />
			</TableRow>
		</TableLayout>
	</RelativeLayout>
	
	<RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" 
	    android:layout_gravity="center" android:paddingTop="5dip" android:paddingLeft="15dip" 
	    android:paddingRight="15dip" android:paddingBottom="5dip" >
		<Button
		    android:id="@+id/manual_input"
		    android:layout_width="200sp"
		    android:layout_height="wrap_content"
		    android:text="手动输入运单号"
		    android:textColor="#000000"
		    android:textSize="22sp"
		    android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true" />
		<Button
		    android:id="@+id/replace"
		    android:layout_width="100sp"
		    android:layout_height="wrap_content"
		    android:text="重 置"
		    android:textColor="#000000"
		    android:textSize="22sp"
		    android:layout_alignParentRight="true"
        	android:layout_centerVertical="true" />
	</RelativeLayout>
	
<!-- 	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" 
	    android:layout_gravity="center" android:paddingTop="10dip" android:paddingLeft="15dip" 
	    android:paddingRight="15dip" android:paddingBottom="5dip" >
		<Button
		    android:id="@+id/replace"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="重  置"
		    android:textColor="#000000"
		    android:textSize="22sp"
		    android:layout_alignParentRight="true"
        	android:layout_centerVertical="true" />
	</LinearLayout> -->

	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal" 
	    android:layout_gravity="center" android:paddingTop="5dip" android:paddingLeft="15dip" 
	    android:paddingRight="15dip" >
		<Button
		    android:id="@+id/in_store"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="快 件 入 库"
		    android:textColor="#000000"
		    android:textSize="22sp"
		    android:background="@drawable/exit_button_click" />
	</LinearLayout>
    
</LinearLayout> 