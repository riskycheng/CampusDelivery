<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/normal_shape"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/listview_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:src="@drawable/yuantong" />

        <TextView
            android:id="@+id/listview_Delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/listview_image"
            android:padding="7dp"
            android:text="快递公司名"
            android:textColor="#000" />
        
        <TextView
            android:id="@+id/listview_BillNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:layout_toRightOf="@id/listview_Delivery"
            android:padding="7dp"
            android:text="运单号"
            android:textColor="#000" />

        <TextView
            android:id="@+id/listview_BillStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="7dp"
            android:text="快递状态"
            android:textColor="#666" />

        <TextView
            android:id="@+id/listview_RecName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/listview_image"
            android:padding="7dp"
            android:text="收件人名"
            android:textColor="#666" />

        <TextView
            android:id="@+id/listview_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="7dp"
            android:text="提货时间"
            android:textColor="#666" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/light_grey" >
    </LinearLayout>

</LinearLayout>